{% extends '@AkyosCore/layout/base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
    <div class="wrapperLogin">
        <h1 class="mb-3 font-weight-bolder text-left">Réinitialisez votre mot de passe</h1>
        <div id="formContent">
            {% if message and message != "" %}
                <div class="alert alert-danger">{{ message }}</div>
                <div class="mt-4">
                    <a href="{{ path('home') }}">Retour</a>
                </div>
            {% elseif new_password_request and new_password_request.isPasswordChanged %}
                <div class="alert alert-success">Votre mot de passe à bien été modifié. Vous allez reçevoir un mail de
                    confirmation.
                </div>
                <div class="mt-4">
                    <a href="{{ path(new_password_request.userRoute) }}">Retour</a>
                </div>
            {% else %}
                {{ form_start(form) }}
                <div class="label">Mot de passe</div>
                <div class="input mt-2">{{ form_widget(form.password.first) }}</div>
                <div class="label mt-4">Confirmez votre mot de passe</div>
                <div class="input mt-2">{{ form_widget(form.password.second) }}</div>
                <button class="btn btn-lg btn-outline-primary mt-4" type="submit">
                    Enregistrer
                </button>
                {{ form_end(form) }}
                <div class="mt-4">
                    <a href="{{ path(new_password_request.userRoute) }}">Annuler</a>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}

 {% block stylesheets %}
     <link rel="stylesheet" href="{{ asset('bundles/akyoscore/main.css') }}">
 {% endblock %}