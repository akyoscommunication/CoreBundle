{% form_theme form 'bootstrap_4_layout.html.twig' %}

{{ form_start(form) }}
    {{ form_rest(form) }}
    <button class="btn btn-outline-success">{{ button_label|default('Enregistrer') }}</button>
{{ form_end(form) }}

<div class="row pt-5">
    <div class="col-md-6">
        <div class="aky-header-page">
            <h2 class="aky-header-page__title">Liste des éléments</h2>
        </div>
        {% if menuItems is not empty %}
            <button class="btn btn-outline-success" id="editMenuPosition">Mettre à jour les positions</button>
        {% endif %}
        <div id="menuItemsForms" data-menu="{{ form.vars.value.id }}">
            <ul class="aky-menuitem-connectedSortable aky-menuitem-parent">
                {% for parentkey, item in menuItems if item.menuItemParent is null and menuItems is not null %}
                    <li class="aky-menuitem" data-position="{{ parentkey }}" data-id="{{ item.id }}">
                        <div class="aky-menuitem-el" data-id="{{ item.id }}" data-menu="{{ form.vars.value.id }}">
                            {{ item.title }}
                            <button type="button" class="btn btn-primary btn-modal-menuitem" data-toggle="modal" data-target="#modal">
                                <i class="fas fa-pencil-alt"></i>
                            </button>
                        </div>
                        <ul class="aky-menuitem-connectedSortable aky-menuitem-child">
                            {% for childkey, itemChild in item.menuItemsChilds if item.menuItemsChilds is not empty %}
                                <li class="aky-menuitem" data-position="{{ childkey }}" data-id="{{ itemChild.id }}">
                                    <div class="aky-menuitem-el" data-id="{{ itemChild.id }}" data-menu="{{ form.vars.value.id }}">
                                        {{ itemChild.title }}
                                        <button type="button" class="btn btn-primary btn-modal-menuitem" data-toggle="modal" data-target="#modal">
                                            <i class="fas fa-pencil-alt"></i>
                                        </button>
                                    </div>
                                    <ul id="sortable" class="connectedSortable aky-menuitem-child"></ul>
                                </li>
                            {% endfor %}
                        </ul>
                    </li>
                {% endfor %}
            </ul>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="modallabel" aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modallabel">Modifier</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body" id="modalEditMenuitem">
                        <img class="loader" border="0" src="http://www.pictureshack.us/images/16942_Preloader_10.gif" alt="loader" width="128" height="128">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="aky-header-page">
            <h2 class="aky-header-page__title">Ajouter un élément</h2>
        </div>
        {{ form_start(formItem) }}
            {{ form_rest(formItem) }}
            <button class="btn btn-outline-success">Ajouter</button>
        {{ form_end(formItem) }}
    </div>
</div>
