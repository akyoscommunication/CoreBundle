{% extends '@AkyosCore/layout.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block page_content %}
    {% include '@AkyosCore/crud/elements/_header.html.twig' %}
    {% include '@AkyosCore/crud/elements/_table.html.twig' %}

    {% if formModal is defined %}
        {% form_theme formModal 'bootstrap_4_layout.html.twig' %}
        <!-- Modal -->
        <div class="modal fade" id="newModal" tabindex="-1" role="dialog" aria-labelledby="newModalTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="newModalLongTitle">Ajouter un élément</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        {% include '@AkyosCore/crud/_form.html.twig' with {'button_label': 'Ajouter', 'form' : formModal} %}
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
