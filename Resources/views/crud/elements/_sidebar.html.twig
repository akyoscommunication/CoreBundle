{% set details = '' %}
{% if view is defined %}
    {% if view == 'page' %}
        {% set details = path(view, {'slug': el.slug}) %}
    {% elseif view == 'single' %}
        {% set details = path(view, {'entitySlug': getEntitySlug(entity), 'slug': el.slug}) %}
    {% elseif view == 'taxonomy' %}
        {% set details = path(view, {'entitySlug': getEntitySlug(entity), 'category': el.slug}) %}
    {% else %}
        {% set details = null %}
    {% endif %}
{% endif %}
