<div class="aky-header-page">
    <h1 class="aky-header-page__title">{{ title }}</h1>
    {% if button_add is not defined or button_add %}
        {% if formModal is defined %}
            <button type="button" class="btn btn-outline-success" data-toggle="modal" data-target="#newModal">
                Ajouter un élément <i class="fas fa-plus"></i>
            </button>
        {% else %}
            <a class="btn btn-outline-success" href="{{ path(route~'_new', parameters is defined ? parameters : {}) }}">Ajouter un élément <i class="fas fa-plus"></i></a>
        {% endif %}
    {% endif %}
</div>