{% extends '@AkyosCore/layout.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block page_content %}
    <div class="aky-header-page">
        <h1 class="aky-header-page__title">{{ user.email }}</h1>
    </div>

    <div class="content">
        <img src="{{ user.image }}" alt="">
        <a class="btn btn-outline-dark" href="{{ path('profile_edit', {'id' : user.id}) }}">Modifier mon profil</a>
    </div>
{% endblock %}
