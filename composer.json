{
    "name": "akyos/core-bundle",
    "description": "AkyosCMS for Symfony - Core",
    "type": "symfony-bundle",
    "require": {
        "php": "^7.2",
        "ext-ctype": "*",
        "ext-curl": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "ext-intl": "*",
        "ext-fileinfo": "*",
        "beberlei/doctrineextensions": "^1.2",
        "friendsofsymfony/ckeditor-bundle": "^2.2",
        "knplabs/knp-paginator-bundle": "^5.3",
        "stof/doctrine-extensions-bundle": "^1.4",
        "symfony/swiftmailer-bundle": "^3.4",
        "symfony/apache-pack": "^1.0",
        "symfony/webpack-encore-bundle": "^1.7"
    },
    "require-dev": {
        "doctrine/doctrine-fixtures-bundle": "^3.3",
        "liip/test-fixtures-bundle": "^1.0",
        "theofidry/alice-data-fixtures": "^1.2"
    },
    "license": "proprietary",
    "authors": [
        {
            "name": "Lilian Carneau",
            "email": "lilian@akyos.com"
        },
        {
            "name": "Thomas Sebert",
            "email": "thomas@akyos.com"
        }
    ],
    "scripts": {
        "pre-autoload-dump": [
            "composer config extra.symfony.allow-contrib true"
        ],
        "after-install-dependencies": [
            "cd templates && rm -rf base.html.twig && cd ..",
            "mv lib/CoreBundle/InstallFiles/Templates/base.html.twig templates",
            "php bin/console ckeditor:install",
            "php bin/console asset:install --symlink"
        ]
    },
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
            "Akyos\\CoreBundle\\": ""
        }
    }
}
